<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fileTestTv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_button_simple"
        android:gravity="center"
        android:text="FileTest"
        app:layout_constraintBottom_toTopOf="@+id/firstContentTv"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/unBindServiceTv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/unBindServiceTv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_button_simple"
        android:gravity="center"
        android:text="unBindService"
        app:layout_constraintBottom_toTopOf="@+id/firstContentTv"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@+id/fileTestTv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/firstContentTv"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/socketTv"
        app:layout_constraintTop_toBottomOf="@+id/fileTestTv" />

    <TextView
        android:id="@+id/socketTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_button_simple"
        android:gravity="center"
        android:text="SocketTest"
        app:layout_constraintBottom_toTopOf="@+id/secondContentTv"
        app:layout_constraintTop_toBottomOf="@+id/firstContentTv" />

    <TextView
        android:id="@+id/secondContentTv"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/contentProviderTv"
        app:layout_constraintTop_toBottomOf="@+id/socketTv" />

    <TextView
        android:id="@+id/contentProviderTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_enable_button"
        android:gravity="center"
        android:text="ContentProviderTest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondContentTv" />

</androidx.constraintlayout.widget.ConstraintLayout>